<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TextSurface">
        <!--字体大小 -->
        <attr name="tsTextSize" format="integer|reference" />
        <!--字体颜色 -->
        <attr name="tsTextColor" format="integer|reference" />
    </declare-styleable>

    <declare-styleable name="DragDropSwipeRecyclerView">
        <attr name="item_layout" format="reference" />
        <attr name="divider" format="reference" />
        <attr name="behind_swiped_item_icon" format="reference" />
        <attr name="behind_swiped_item_icon_secondary" format="reference" />
        <attr name="behind_swiped_item_icon_margin" format="dimension" />
        <attr name="behind_swiped_item_icon_centered" format="boolean" />
        <attr name="behind_swiped_item_bg_color" format="color" />
        <attr name="behind_swiped_item_bg_color_secondary" format="color" />
        <attr name="behind_swiped_item_custom_layout" format="reference" />
        <attr name="behind_swiped_item_custom_layout_secondary" format="reference" />
        <attr name="swiped_item_opacity_fades_on_swiping" format="boolean" />
    </declare-styleable>
    <declare-styleable name="LrcView">
        <attr name="lrcTextSize" format="dimension" />
        <attr name="lrcNormalTextSize" format="dimension" />
        <attr name="lrcDividerHeight" format="dimension" />
        <attr name="lrcNormalTextColor" format="reference|color" />
        <attr name="lrcCurrentTextColor" format="reference|color" />
        <attr name="lrcTimelineTextColor" format="reference|color" />
        <attr name="lrcAnimationDuration" format="integer" />
        <attr name="lrcLabel" format="string" />
        <attr name="lrcPadding" format="dimension" />
        <attr name="lrcTimelineColor" format="reference|color" />
        <attr name="lrcTimelineHeight" format="dimension" />
        <attr name="lrcPlayDrawable" format="reference" />
        <attr name="lrcTimeTextColor" format="reference|color" />
        <attr name="lrcTimeTextSize" format="dimension" />
        <attr name="lrcTextGravity">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>
</resources>