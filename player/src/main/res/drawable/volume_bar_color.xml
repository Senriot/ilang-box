<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  设置背景色（黑色）  -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip"/>
            <gradient
                android:angle="90"
                android:endColor="#60b0b0b0"
                android:startColor="#60b0b0b0"/>
        </shape>
    </item>

    <!--  设置进度条颜色（白色）  -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip"/>
                <gradient
                    android:angle="90"
                    android:endColor="@color/md_amber_800"
                    android:startColor="@color/md_amber_400"/>
            </shape>
        </clip>
    </item>

</layer-list>  