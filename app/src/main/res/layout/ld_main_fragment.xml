<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.senriot.ilangbox.ui.langdu.LdMainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="74dp"
        tools:context="com.senriot.ilangbox.ui.langdu.LdMainFragment">

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="showLdContent"
                    android:src="@drawable/ld_card_1"
                    android:tag="1"
                    app:layout_column="0"
                    app:layout_row="0"
                    app:layout_rowSpan="2" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="showLdContent"
                    android:src="@drawable/ld_card_2"
                    android:tag="2"
                    app:layout_column="1"
                    app:layout_columnSpan="2"
                    app:layout_row="0" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="showLdContent"
                    android:src="@drawable/ld_card_3"
                    android:tag="3"
                    app:layout_column="3"
                    app:layout_row="0" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="showLdContent"
                    android:src="@drawable/ld_card_4"
                    android:tag="4"
                    app:layout_column="1"
                    app:layout_row="1" />

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="showLdContent"
                    android:src="@drawable/ld_card_5"
                    android:tag="5"
                    app:layout_column="2"
                    app:layout_row="1" />

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="showLdContent"
                    android:src="@drawable/ld_card_6"
                    android:tag="6"
                    app:layout_column="3"
                    app:layout_row="1" />

                <ImageButton
                    android:id="@+id/imageButton8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="showLdContent"
                    android:src="@drawable/ld_card_7"
                    android:tag="8"
                    app:layout_column="4"
                    app:layout_row="0" />

                <ImageButton
                    android:id="@+id/imageButton9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="showLdContent"
                    android:src="@drawable/ld_card_8"
                    android:tag="7"
                    app:layout_column="4"
                    app:layout_row="1" />

            </androidx.gridlayout.widget.GridLayout>
        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>